<?xml version="1.0" encoding="utf-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gab = "http://phonegab.com/ns/1.0"
  id = "com.phonegab.example9"
  version = "1.0.0">
  
<name> app9 Geolocalizacion </name>

<description>
 Muestra la ubicacion del dispositivo de acuerdo al GPS
 </description>
 
 <author href="https://build.phonegab.com" email="lizma2625@gmail.com">
  Lizbeth Mendez Ahuatl 4to G
 </author>
 
 <!-- Perzonaliza la aplicacion y plataforma -->
 <preference name="orientation" value="default"/>
 <!-- <preference name="orientation" value="portrait"/>
 <preference name"orientation" value="landscape"/> -->
 <preference name="target-device" value="universal"/>
 <preference name="fullscreen" value="true"/>
 <preference name="android-installLocation" value="auto"/>
 <preference name="premissions" value="INTERNET"/>
 
 <!-- Plugins -->
 <!-- Core Plugins -->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!--Plugim para geolocalizar-->
<plugin name="cordova-plugin-geolocation" source="npm"/> 
  <!-- Third party plugins -->
  
    <!--Para accesar a paginas en internet-->
  <allow-intent href="https://*/*"/>
  <acces origin="https://*/*"/>
  <allow-intent href="http://*/*"/>
  <acces origin="http://*/*"/>
  <plugin name="cordova-plugin-whitelist" source="npm"/>
  
   <!-- Colocar icono app -->
   
<icon src="res/android/mdpi.png"/>

</widget>
